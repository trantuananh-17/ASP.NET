@{
    ViewData["Title"] = "Registration Form";
}

<h2>Registration Form</h2>

<!-- Form đăng ký -->
<form method="post" action="@Url.Action("Register", "Register")">
    <div class="form-container">
        <div class="form-group">
            <label for="firstName">First Name</label>
            <input type="text" id="firstName" name="firstName" required class="form-control">
        </div>

        <div class="form-group">
            <label for="lastName">Last Name</label>
            <input type="text" id="lastName" name="lastName" required class="form-control">
        </div>

        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" id="email" name="email" required class="form-control">
        </div>

        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" id="password" name="password" required class="form-control">
        </div>

        <div class="form-group">
            <label for="city">City</label>
            <input type="text" id="city" name="city" required class="form-control">
        </div>

        <div class="form-group gender-group">
            <label for="gender">Gender</label>
            <input type="radio" id="male" name="gender" value="Male"> Male
            <input type="radio" id="female" name="gender" value="Female"> Female
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>

@if (ViewData["FirstName"] != null)
{
    <h3>Your Information</h3>
    <p><strong>First Name:</strong> @ViewData["FirstName"]</p>
    <p><strong>Last Name:</strong> @ViewData["LastName"]</p>
    <p><strong>Email:</strong> @ViewData["Email"]</p>
    <p><strong>Password:</strong> @ViewData["Password"]</p>
    <p><strong>City:</strong> @ViewData["City"]</p>
    <p><strong>Gender:</strong> @ViewData["Gender"]</p>
}

<style>
    /* CSS cho form đăng ký */
    body {
        font-family: Arial, sans-serif;
        background-color: #f9f9f9;
        color: #333;
    }

    h2 {
        text-align: center;
        color: #003366;
    }

    .form-container {
        width:500px;
        margin: 0 auto;
        padding: 20px;
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .form-group {
        margin-bottom: 15px;
    }

        .form-group label {
            display: block;
            font-weight: bold;
            margin-bottom: 5px;
        }

        .form-group input {
            width: 100%;
            padding: 10px;
            font-size: 14px;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
        }

            .form-group input:focus {
                border-color: #0056b3;
                outline: none;
            }

    .gender-group {
        display: flex;
        justify-content: space-around;
        align-items: center;
    }

    .btn {
        display: inline-block;
        padding: 10px 20px;
        background-color: #0056b3;
        color: #fff;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        text-align: center;
        width: 100%;
    }

        .btn:hover {
            background-color: #003366;
        }

        .btn:focus {
            outline: none;
        }
</style>
