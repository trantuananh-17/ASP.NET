
@{
    Layout = "~/Views/Shared/_View.cshtml";
}

<h1 style="text-align:center">Employee Information</h1>
<form action="/NhanVien/Xuat" method="post">
    <table>
        <tr>
            <td>First Name</td>
            <td>
                <input type="text" name="firstname" />
            </td>
        </tr>
        <tr>
            <td>Last Name</td>
            <td>
                <input type="text" name="lastname" />
            </td>
        </tr>
        <tr>
            <td>Gender</td>
            <td>
                <input type="radio" name="gioitinh" value="nam" />Nam
                <input type="radio" name="gioitinh" value="nu" />Nữ
            </td>
        </tr>
        <tr>
            <td>DOB:</td>
            <td>
                <select name="namsinh">
                    <option>2004</option>
                    <option>2003</option>
                    <option>2002</option>
                    <option>2001</option>
                </select>
                <select name="thangsinh">
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                    <option>5</option>
                    <option>6</option>
                    <option>7</option>
                    <option>8</option>
                    <option>9</option>
                    <option>10</option>
                </select>
            </td>
        </tr>
        <tr>
            <td>Hobies</td>
            <td>
                <input type="checkbox" name="sothich" value="music" />Music
                <input type="checkbox" name="sothich" value="touris" />Touris
                <input type="checkbox" name="sothich" value="sport" />Sport
            </td>
        </tr>
        <tr>
            <td>Lương</td>
            <td>
                <input type="text" name="luong" />
            </td>
        </tr>
        <tr>
            <td>Ngày làm việc:</td>
            <td>
                <input type="text" name="ngaylv" />
            </td>
        </tr>
        <tr>
            <td colspan="2">
                <input type="submit" value="submit" />
                <input type="reset" value="reset"/>
            </td>
        </tr>
    </table>
</form>
